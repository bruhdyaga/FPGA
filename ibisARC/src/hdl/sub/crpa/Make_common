# -*- mode: makefile; -*-
#
# Файл с общими настройками make
#

PROJECT_DIR=/home/$(USER)/CRPA
BIN_PDF_DIR=$(PROJECT_DIR)/bin_pdf

ifdef SystemRoot
        OS=win
        SCP_IMPALA=C:\PuTTY\pscp.exe -pw $(PASSWORD)
        SCP_SRNS=C:\PuTTY\pscp.exe -P 221 -pw $(PASSWORD)
        SSH_IMPALA=C:\kitty\kitty.exe -pass $(PASSWORD)   # Переделать на KiTTY
        SSH_SRNS=C:\kitty\kitty.exe -P 221 -pass $(PASSWORD)
else
        ifeq ($(shell uname), Linux)
                OS=linux
                SCP_IMPALA=scp
                SCP_SRNS=scp -P 221
                SSH_IMPALA=ssh
                SSH_SRNS=ssh -p 221
        endif
endif

SHELL=/bin/bash
